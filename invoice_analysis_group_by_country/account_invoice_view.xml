<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Invoice tree -->
    	<record id="invoice_tree_show_country" model="ir.ui.view">
            <field name="name">account.invoice.tree</field>
            <field name="model">account.invoice</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="account.invoice_tree"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                	<field name="country_id" string="Country" attrs="{'readonly':[('state','!=','draft')]}"/>
                </field>
            </field>
        </record>
        
        <!-- Invoice form -->
        <record id="invoice_form_country_required" model="ir.ui.view">
            <field name="name">account.invoice.form.country.required</field>
            <field name="model">account.invoice</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <data>
                	<field name="address_invoice_id" position="after">
                        <field name="country_id" />
                        <newline/>
                    </field>
                    <field name="address_invoice_id" position="replace">
						<field name="address_invoice_id"
							   domain="[('partner_id','=',partner_id)]"
							   context="{'default_partner_id': partner_id}"
							   options='{"quick_create": false}'
							   on_change="onchange_address_invoice_id(address_invoice_id, context)"/>
                    </field>
                </data>
            </field>
        </record>
        
    </data>
</openerp>
