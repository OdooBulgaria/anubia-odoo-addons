<?xml version="1.0"?>
<openerp>
    <data>

        <record id="crm_case_form_view_leads" model="ir.ui.view">
            <field name="name">CRM - Leads Form</field>
            <field name="model">crm.lead</field>
            <field name="type">form</field>
            <field name="mode">extension</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="inherit_id" ref="crm.crm_case_form_view_leads" />
            <field name="arch" type="xml">

                <!-- Adds new page to show related crm.lead.historic model items -->
                <xpath expr="//notebook" position="inside">
                    <page string="Changelog">
                        <field name="changelog_ids" context="{
                            'tree_view_ref': 'crm_lead_changelog.view_crm_lead_historic_tree',
                            'form_view_ref': 'crm_lead_changelog.view_crm_lead_historic_form',
                        }" widget="one2many_list" nolabel="1" />
                    </page>
                    <page string="Stage of case changelog">
                        <field name="stage_changelog_ids" />
                    </page>
                    <page string="Salesperson changelog">
                        <field name="user_changelog_ids" />
                    </page>
                </xpath>

            </field>
        </record>

        <record id="crm_case_form_view_oppor" model="ir.ui.view">
            <field name="name">Opportunities</field>
            <field name="model">crm.lead</field>
            <field name="type">form</field>
            <field name="mode">extension</field>
            <field name="priority" eval="20" />
            <field name="active" eval="True" />
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor" />
            <field name="arch" type="xml">

                <!-- Adds new page to show related crm.lead.historic model items -->
                <xpath expr="//notebook" position="inside">
                    <page string="Changelog">
                        <field name="changelog_ids" context="{
                            'tree_view_ref': 'crm_lead_changelog.view_crm_lead_historic_tree',
                            'form_view_ref': 'crm_lead_changelog.view_crm_lead_historic_form',
                        }" widget="one2many_list" nolabel="1" />
                    </page>
                </xpath>

            </field>
        </record>

        <!-- Crm Lead Historic Tree View -->
        <record id="view_crm_lead_historic_tree" model="ir.ui.view">
            <field name="name">crm.lead.changelog.tree</field>
            <field name="model">crm.lead.changelog</field>
            <field name="arch" type="xml">
                <tree string="Changelog" create="0" delete="0">
                    <field name="date"/>
                    <field name="user_id"/>
                    <field name="stage_id"/>
                    <field name="reason_id"/>
                </tree>
            </field>
        </record>

        <!-- Crm Lead Historic Form View -->
        <record id="view_crm_lead_historic_form" model="ir.ui.view">
            <field name="name">crm.lead.changelog.form</field>
            <field name="model">crm.lead.changelog</field>
            <field name="arch" type="xml">
                <form string="Changelog" create="0" delete="0" edit="0">
                    <group col="2">
                        <field name="date"/>
                        <field name="user_id"/>
                        <field name="stage_id"/>
                        <field name="reason_id"/>
                    </group>
                </form>
            </field>
        </record>

    </data>
</openerp>
