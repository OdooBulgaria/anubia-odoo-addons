<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>

        <record id="view_crm_period_tree" model="ir.ui.view">
            <field name="name">crm.period.tree</field>
            <field name="model">crm.period</field>
            <field name="arch" type="xml">
                <tree string="Period">
                    <field name="name"/>
                    <field name="first_date"/>
                    <field name="last_date"/>
                </tree>
            </field>
        </record>

        <record id="view_crm_period_form" model="ir.ui.view">
            <field name="name">crm.period.form</field>
            <field name="model">crm.period</field>
            <field name="arch" type="xml">
                <form string="Period">
                    <group>
                        <field name="name" class="oe_field_name" string="Name" placeholder="Name" help="Enter the new value for name"/>
                        <field name="first_date" class="oe_field_first_date" string="First date" help="Enter the new value for first date"/>
                        <field name="last_date" class="oe_field_last_date" string="Last date" help="Enter the new value for last date"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_crm_period" model="ir.actions.act_window">
            <field name="name">CRM Period</field>
            <field name="res_model">crm.period</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_crm_period_tree"/>
        </record>

        <menuitem action="action_crm_period"
            id="menu_crm_period" name="Periods"
            parent="base.menu_crm_config_lead" sequence="5"/>

    </data>
</openerp>
