  <story>
    <para style="terp_default_bucle">[[ repeatIn(objects,'o') ]]</para>
    <para style="terp_default_bucle">[[ setLang(o.partner_id.lang) ]]</para>
    <blockTable colWidths="8.7cm,9.3cm" style="Table_Partner_Address">
      <tr>
        <td>
            <para style="terp_default_8">
	    <font color="white"> </font>
          </para>
        </td>
        <td>
            <para style="terp_default_8">[[ (o.partner_id and o.partner_id.title and o.partner_id.title.name) or '' ]] [[ (o.partner_id and o.partner_id.name) or '' ]]</para>
            <para style="terp_default_8">[[ o.partner_id.street or '']]</para>
            <para style="terp_default_8">[[ o.partner_id.street2 or '']]</para>
            <para style="terp_default_8">[[ o.partner_id.zip or  '' ]] [[ o.partner_id.city or  '' ]] ([[ o.partner_id.country_id.name or  '' ]])</para>
            <spacer length="10"/>
            <para style="terp_default_8">Tel. : [[ (o.partner_id.phone) or removeParentNode('para') ]] / Fax : [[ (o.partner_id.fax) or '' ]]</para>
        </td>
      </tr>
    </blockTable>
    <pto>
    <blockTable colWidths="18cm" style="Table6">
        <tr>
            <td>
                <para style="terp_header"><b>INVOICE [[ ((o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')) or removeParentNode('para')) and '' ]] </b></para>
                <para style="terp_header"><b>PRO-FORMA [[ ((o.type == 'out_invoice' and o.state == 'proforma2') or removeParentNode('para')) and '' ]]</b></para>
                <para style="terp_header"><b>DRAFT INVOICE [[ ((o.type == 'out_invoice' and o.state == 'draft') or removeParentNode('para')) and '' ]]</b></para>
                <para style="terp_header"><b>CANCELLED INVOICE [[ ((o.type == 'out_invoice' and o.state == 'cancel') or removeParentNode('para')) and '' ]]</b></para>
                <para style="terp_header"><b>REFUND [[ (o.type=='out_refund' or removeParentNode('para')) and '' ]]</b></para>
                <para style="terp_header"><b>SUPPLIER REFUND [[ (o.type=='in_refund' or removeParentNode('para')) and '' ]]</b></para>
                <para style="terp_header"><b>SUPPLIER INVOICE [[ (o.type=='in_invoice' or removeParentNode('para')) and '' ]]</b></para>
            </td>
        </tr>
    </blockTable>
    
    <spacer length="15"/>
    
    <blockTable rowHeights="1.8cm" colWidths="2.75cm,2.75cm,2.75cm,2.75cm,7.0cm" style="Table_Invoice_General_Header">
        <tr>
