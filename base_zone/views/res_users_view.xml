<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="1">

        <record id="view_users_form_tree" model="ir.ui.view">
            <field name="name">res.users.tree</field>
            <field name="model">res.users</field>
            <field name="type">tree</field>
            <field name="mode">extension</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="inherit_id" ref="base.view_users_tree" />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='login']" position="after">
                        <field name="subordinate_zone_ids" class="oe_field_zone_ids"
                            placeholder="Choose zones for this user" />

                    </xpath>
                </data>
            </field>
        </record>

        <record id="view_users_form" model="ir.ui.view">
            <field name="name">res.users.form</field>
            <field name="model">res.users</field>
            <field name="type">form</field>
            <field name="mode">extension</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="inherit_id" ref="base.view_users_form" />
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//notebook" position="inside">
                        <page string="Zones">
                            <div class="oe_edit_only">
                                <separator string="Own child zones" />
                                <field name="zone_ids" class="oe_field_zone_ids"
                                    placeholder="Add/remove zones" widget="many2many" />
                            </div>
                            <separator class="oe_base_zone_save_only" />
                            <separator string="Subordinate zones" class="oe_edit_only" />
                            <field name="subordinate_zone_ids" class="oe_field_subordinate_zone_ids"
                                placeholder="Add/remove subordinate zones" />
                        </page>
                    </xpath>
                </data>
            </field>
        </record>

        <record id="view_res_users_x2many_tree" model="ir.ui.view">
            <field name="name">Zone users</field>
            <field name="model">res.users</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="25" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <field name="name" class="oe_field_name"
                    placeholder="Enter the new value for name" />
                <field name="subordinate_zone_ids" class="oe_field_subordinate_zone_ids"
                    placeholder="Add/remove subordinate zones" />
            </field>
        </record>

    </data>
</openerp>
